<%- include('../layout/empty/top', {title: title}); -%>

<form method="post" action="/registration/settings" class="bg-white p-16 rounded flex flex-col gap-5 relative min-h-128">
    <h2 class="text-center font-semibold text-2xl w-72 block">Настройка пользователя</h2>
    <%- include('../components/input/base', {id: 'surname', placeholder: 'Фамилия'}); -%>
    <%- include('../components/input/base', {id: 'name', placeholder: 'Имя'}); -%>
    <%- include('../components/input/base', {id: 'secondName', placeholder: 'Отчество'}); -%>
    <%- include('../components/input/base', {id: 'phoneNumber', placeholder: 'Номер телефона'}); -%>
    <%- include('../components/input/base', {id: 'email', placeholder: 'Email'}); -%>
    <h2 class="text-center font-semibold text-2xl w-72 block">Паспортные данные</h2>
    <%- include('../components/input/base', {id: 'series', placeholder: 'Серия'}); -%>
    <%- include('../components/input/base', {id: 'number', placeholder: 'Номер'}); -%>
    <%- include('../components/input/base', {id: 'issuedBy', placeholder: 'Кем выдан'}); -%>
    <%- include('../components/input/base', {id: 'issuedDate', placeholder: 'Дата выдачи(YYYY-MM-DD)'}); -%>
    <%- include('../components/input/base', {id: 'birthday', placeholder: 'Дата рождения(YYYY-MM-DD)'}); -%>

    <%- include('../components/button/primary', {text: 'Сохранить', type: 'submit'}); -%>
    <button type="button" onclick="window.history.back()" class="bg-gray-300 text-black p-2 rounded mt-4">
        Назад
    </button>
</form>

<%- include('../layout/empty/bottom'); -%>