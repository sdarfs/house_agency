<%- include('../layout/base/top', {title: title, isWorker: isWorker}); %>

<div class="bg-white p-4 w-fit rounded">
    <div class="flex mb-4 items-center flex-wrap gap-6">
        <h1 class="font-semibold text-3xl">Объект №<%= house.id %></h1>
    </div>
    <div class="flex gap-4">
        <div class="flex flex-col gap-2">
            <span class="flex">
                <span class="text-gray-400 w-32 block">Адрес:</span>
                <span><%= house.address %>, <%= house.districtName %>, <%= house.cityName %></span>
            </span>
            <span class="flex">
                <span class="text-gray-400 w-32 block">Тип:</span>
                <span><%= house.houseTypeName %></span>
            </span>
            <span class="flex">
                <span class="text-gray-400 w-32 block">Назначение:</span>
                <span><%= house.housePurposeName %></span>
            </span>
            <span class="flex">
                <span class="text-gray-400 w-32 block">Цена:</span>
                <span><%= house.cost %></span>
            </span>
            <span class="flex">
                <span class="text-gray-400 w-32 block">Комнат:</span>
                <span><%= house.roomCount %></span>
            </span>
            <span class="flex">
                <span class="text-gray-400 w-32 block">Площадь:</span>
                <span><%= house.area %></span>
            </span>
            <p class="mt-4"><%= house.description %></p>
        </div>
    </div>
</div>

<%- include('../layout/base/bottom'); -%>